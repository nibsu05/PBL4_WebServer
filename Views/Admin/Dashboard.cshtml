@model PBL3.DTO.Admin.Admin_DashboardDTO
@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-chart-line"></i> Bảng điều khiển</h2>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-2">Tổng người dùng</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-2">Tổng sản phẩm</h6>
                            <h2 class="mb-0">@Model.TotalProducts</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-box fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-2">Tổng đơn hàng</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-2">Tổng doanh thu</h6>
                            <h2 class="mb-0">@Model.TotalRevenue.ToString("N0") đ</h2>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-dollar-sign fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="UserManagement" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users me-2"></i> Người dùng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="ProductManagement" class="btn btn-outline-success w-100">
                                <i class="fas fa-box me-2"></i> Sản phẩm
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="OrderManagement" class="btn btn-outline-warning w-100">
                                <i class="fas fa-shopping-cart me-2"></i> Đơn hàng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="RevenueManagement" class="btn btn-outline-danger w-100">
                                <i class="fas fa-dollar-sign me-2"></i> Doanh thu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
