@model PBL3.DTO.Admin.Admin_ProductManagementDTO

@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-box"></i> Product Details</h2>
        <div>
            <a href="@Url.Action("ProductManagement")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" 
                             class="img-fluid rounded" alt="@Model.ProductName">
                    }
                    else
                    {
                        <div class="bg-light rounded p-5">
                            <i class="fas fa-image fa-4x text-muted"></i>
                            <p class="mt-3">No image available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Product Information</h4>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Product ID:</div>
                        <div class="col-md-9">@Model.Id</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Product Name:</div>
                        <div class="col-md-9">@Model.ProductName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Price:</div>
                        <div class="col-md-9">@Model.Price.ToString("N0") VNĐ</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Category:</div>
                        <div class="col-md-9">@Model.Category</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Stock Quantity:</div>
                        <div class="col-md-9">@Model.StockQuantity</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Status:</div>
                        <div class="col-md-9">
                            <span class="badge @(Model.Status == "Selling" ? "bg-success" : 
                                               Model.Status == "StopSelling" ? "bg-warning" : 
                                               "bg-danger")">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Seller:</div>
                        <div class="col-md-9">@Model.SellerName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Created At:</div>
                        <div class="col-md-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 