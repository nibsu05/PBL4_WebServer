@model PBL3.DTO.Seller.EditProductDTO

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/SellerLayout.cshtml";
}

@section Styles {
    <style>
        .edit-product-container {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
            padding: 32px;
            margin-bottom: 32px;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            padding: 12px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #2e7d32;
            box-shadow: 0 0 0 0.2rem rgba(46, 125, 50, 0.25);
        }

        .image-preview {
            width: 200px;
            height: 200px;
            border-radius: 12px;
            object-fit: cover;
            margin-bottom: 16px;
            border: 2px dashed #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .image-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .image-preview-placeholder {
            text-align: center;
            color: #6c757d;
        }

        .image-preview-placeholder i {
            font-size: 48px;
            margin-bottom: 8px;
        }

        .btn-submit {
            background: #2e7d32;
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background: #1b5e20;
            color: white;
        }

        .btn-cancel {
            background: #f8f9fa;
            color: #2c3e50;
            padding: 12px 24px;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background: #e9ecef;
            color: #1a252f;
        }

        .validation-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 4px;
        }
    </style>
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item">
                <a href="@Url.Action("ProductManagement")" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-2"></i>Quản lý sản phẩm
                </a>
            </li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Chỉnh sửa sản phẩm</li>
        </ol>
    </nav>

    <div class="edit-product-container">
        <h2 class="mb-4">Chỉnh sửa sản phẩm</h2>

        @using (Html.BeginForm("EditProduct", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CurrentImage)

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="image-preview" id="imagePreview">
                        @if (Model.CurrentImage != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.CurrentImage)" 
                                 alt="Hình ảnh sản phẩm" id="previewImage" />
                        }
                        else
                        {
                            <div class="image-preview-placeholder">
                                <i class="fas fa-image"></i>
                                <p>Chưa có hình ảnh</p>
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label for="ProductImageFile" class="form-label">Hình ảnh sản phẩm</label>
                        <input type="file" class="form-control" id="ProductImageFile" name="ProductImageFile" 
                               accept="image/*" onchange="previewImage(this)" />
                        <small class="text-muted">Chấp nhận file JPEG, PNG, GIF (tối đa 5MB)</small>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "validation-message" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", min = "0", max = "1000000000" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "validation-message" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductQuantity, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ProductQuantity, new { @class = "form-control", type = "number", min = "0", max = "10000" })
                        @Html.ValidationMessageFor(m => m.ProductQuantity, "", new { @class = "validation-message" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "validation-message" })
                    </div>

                    <div class="d-flex gap-3">
                        <a href="@Url.Action("ProductManagement")" class="btn btn-cancel">
                            <i class="fas fa-times me-2"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-submit">
                            <i class="fas fa-save me-2"></i>Lưu thay đổi
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const previewImage = document.getElementById('previewImage');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    if (previewImage) {
                        previewImage.src = e.target.result;
                    } else {
                        preview.innerHTML = `<img src="${e.target.result}" alt="Hình ảnh sản phẩm" id="previewImage" />`;
                    }
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Format số tiền khi nhập và xử lý submit
        const priceInput = document.getElementById('Price');
        const form = document.querySelector('form');

        // Format hiển thị khi nhập
        priceInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value) {
                // Lưu giá trị số vào data attribute
                this.dataset.rawValue = value;
                // Hiển thị giá trị đã format
                this.value = parseInt(value).toLocaleString('vi-VN');
            }
        });

        // Xử lý trước khi submit form
        form.addEventListener('submit', function(e) {
            // Lấy giá trị số từ data attribute và gán lại vào input
            if (priceInput.dataset.rawValue) {
                priceInput.value = priceInput.dataset.rawValue;
            }
        });
    </script>
} 