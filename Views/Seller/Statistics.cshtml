@model PBL3.DTO.Seller.Seller_ThongKeDTO
@{
    ViewBag.Title = "Thống kê doanh thu";
    Layout = "~/Views/Shared/SellerLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #f6f8fa;
        }

        .dashboard-card {
            background: #ffffff;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            padding: 20px;
            margin-bottom: 24px;
        }

        .dashboard-card h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 16px;
        }

        .metric-card {
            background: #e3f2fd;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-bottom: 16px;
            border: 1px solid #bbdefb;
        }

        .metric-card .value {
            font-size: 2rem;
            font-weight: 700;
            color: #1976d2;
        }

        .metric-card .label {
            color: #546e7a;
            font-size: 0.95rem;
        }

        .date-range-filter {
            margin-bottom: 24px;
        }

        .product-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .product-item {
            display: flex;
            flex-direction: column;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .product-name {
            font-weight: 600;
            font-size: 1rem;
            color: #37474f;
        }

        .product-stats {
            font-size: 0.875rem;
            color: #78909c;
        }

        .dashboard-table th,
        .dashboard-table td {
            padding: 8px 12px;
        }
    </style>
}

<div class="container mt-4">
    <div class="row">
        <!-- Menu trái -->
        <div class="col-md-3">
            @Html.Partial("_SellerMenuOutsideLayout")
        </div>

        <!-- Nội dung -->
        <div class="col-md-9">
            <div class="dashboard-card">
                <h3>Thống kê doanh thu</h3>
                <form method="get" class="row g-3 date-range-filter">
                    <div class="col-md-5">
                        <label for="startDate" class="form-label">Từ ngày</label>
                        <input type="date" class="form-control" id="startDate" name="startDate"
                               value="@Model.StartDate.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-5">
                        <label for="endDate" class="form-label">Đến ngày</label>
                        <input type="date" class="form-control" id="endDate" name="endDate"
                               value="@Model.EndDate.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Lọc</button>
                    </div>
                </form>

                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="metric-card">
                            <div class="value">@Model.TotalRevenue.ToString("N0") đ</div>
                            <div class="label">Tổng doanh thu</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="metric-card">
                            <div class="value">@Model.TotalOrders</div>
                            <div class="label">Tổng số đơn hàng</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="metric-card">
                            <div class="value">@Model.AverageOrderValue.ToString("N0") đ</div>
                            <div class="label">Giá trị đơn trung bình</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bảng top sản phẩm -->
            <div class="row">
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <h3>Top 5 sản phẩm bán chạy</h3>
                        <table class="table dashboard-table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TopProductsByQuantity != null)
                                {
                                    foreach (var product in Model.TopProductsByQuantity)
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td>@product.TotalSold</td>
                                            <td>@product.TotalRevenue.ToString("N0") đ</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">Không có dữ liệu.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <h3>Top 5 sản phẩm doanh thu cao</h3>
                        <table class="table dashboard-table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TopProductsByRevenue != null)
                                {
                                    foreach (var product in Model.TopProductsByRevenue)
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td>@product.TotalSold</td>
                                            <td>@product.TotalRevenue.ToString("N0") đ</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3">Không có dữ liệu.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            var startDate = new Date(document.getElementById('startDate').value);
            var endDate = new Date(document.getElementById('endDate').value);
            if (startDate > endDate) {
                e.preventDefault();
                alert('Ngày bắt đầu phải nhỏ hơn hoặc bằng ngày kết thúc');
            }
        });
    </script>
}
