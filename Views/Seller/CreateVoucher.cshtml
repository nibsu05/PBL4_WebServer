@model PBL3.DTO.Seller.Seller_TaoGiamGiaDTO

@{
    ViewBag.Title = "Tạo voucher mới";
    Layout = "~/Views/Shared/SellerLayout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #f6f8fa;
        }

        .dashboard-card {
            background: #ffffff;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            padding: 20px;
            margin-bottom: 24px;
        }

        .dashboard-card h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 16px;
        }
    </style>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_SellerMenuOutsideLayout")
        </div>

        <div class="col-md-9">
            <div class="dashboard-card">
                <div class="d-flex align-items-center mb-3">
                    <a href="@Url.Action("VoucherList")" class="text-secondary me-3">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h3 class="mb-0">Tạo voucher mới</h3>
                </div>

                <form asp-action="CreateVoucher" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="VoucherId" class="form-label">Mã voucher</label>
                        <input asp-for="VoucherId" class="form-control" />
                        <span asp-validation-for="VoucherId" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PercentDiscount" class="form-label">Phần trăm giảm giá (%)</label>
                            <input asp-for="PercentDiscount" type="number" min="1" max="100" class="form-control" />
                            <span asp-validation-for="PercentDiscount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaxDiscount" class="form-label">Giảm tối đa (VNĐ)</label>
                            <input asp-for="MaxDiscount" type="number" min="1000" step="1000" class="form-control" />
                            <span asp-validation-for="MaxDiscount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control" id="StartDate" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control" id="EndDate" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">Số lượng voucher</label>
                        <input asp-for="Quantity" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Mô tả (không bắt buộc)</label>
                        <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("VoucherList")" class="btn btn-secondary me-2">Hủy</a>
                        <button type="submit" class="btn btn-primary">Tạo voucher</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('StartDate').min = new Date().toISOString().slice(0, 16);
        document.getElementById('StartDate').addEventListener('change', function () {
            document.getElementById('EndDate').min = this.value;
        });
    </script>
}