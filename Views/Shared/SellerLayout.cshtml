@{
    var userName = ViewBag.UserName as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CDT Seller</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { background: #f8f9fa; font-family: 'Segoe UI', sans-serif; }

        .main-header {
            background: #222;
            color: #fff;
            border-radius: 0 0 16px 16px;
            padding: 0.75rem 0;
            z-index: 2;
        }

        .main-header .logo {
            font-size: 2rem;
            font-weight: bold;
            color: #b2f5ea;
            letter-spacing: 1px;
        }

        .main-header .btn-header {
            background: #0d3f2e;
            color: #fff;
            border-radius: 2rem;
            border: none;
            margin-left: 0.5rem;
        }

        .main-header .btn-header:hover {
            background: #27ae60;
            color: #fff;
        }

        .main-header .cart-badge {
            font-size: 0.75rem;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 0.7rem;
            padding: 0.25rem 0.5rem;
            border-radius: 10px;
            min-width: 18px;
            text-align: center;
        }

        .seller-menu-link {
            position: relative;
        }

        .content {
            padding: 2rem 1rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <div class="main-header w-100 shadow-sm mb-3">
        <div class="container-fluid d-flex flex-wrap align-items-center justify-content-between py-2">
            <a href="@Url.Action("Dashboard", "Seller")" class="logo text-decoration-none">
            CDT Seller
            </a>
            <div class="d-flex align-items-center">
                <div class="dropdown me-2">
                    <button class="btn btn-header dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-1"></i> @(userName ?? "Tài khoản")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Seller")">Thông tin tài khoản</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("DoiMatKhau", "Seller")">Đổi mật khẩu</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Wallet", "Seller")">Ví</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
