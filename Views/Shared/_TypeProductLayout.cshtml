@using PBL3.Enums
@model List<TypeProduct>

@functions {
    string ToVietnamese(TypeProduct type)
    {
        switch(type)
        {
            case TypeProduct.Thoitrangnu: return "Thời trang nữ";
            case TypeProduct.Thoitrangnam: return "Thời trang nam";
            case TypeProduct.Giaydep: return "Giày dép";
            case TypeProduct.Tuithoitrangnu: return "Túi thời trang nữ";
            case TypeProduct.Tuithoitrangnam: return "Túi thời trang nam";
            case TypeProduct.BaloVali: return "Balo & Vali";
            case TypeProduct.Donghotrangsuc: return "Đồng hồ & Trang sức";
            case TypeProduct.Dochoime_be: return "Đồ chơi mẹ & bé";
            case TypeProduct.Dienthoai_maytinhbang: return "Điện thoại & Máy tính bảng";
            case TypeProduct.Lamdep_suckhoe: return "Làm đẹp & Sức khỏe";
            case TypeProduct.Diengiadung: return "Điện gia dụng";
            case TypeProduct.Laptop_mayvitinh_linhkien: return "Laptop & Linh kiện";
            case TypeProduct.Oto_xemay_xedap: return "Ô tô, xe máy, xe đạp";
            case TypeProduct.Sachvo: return "Sách vở";
            case TypeProduct.Dientu_dienlanh: return "Điện tử & Điện lạnh";
            case TypeProduct.Mayanh_mayquayphim: return "Máy ảnh & Máy quay";
            case TypeProduct.Thethao: return "Thể thao";
            default: return type.ToString();
        }
    }
}
<style>
    .sidebar {
        background-color: #fff;
        border-radius: 0.75rem;
        padding: 1rem;
        font-size: 0.95rem;
    }

    .sidebar h5 {
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .sidebar .list-group-item {
        border: none;
        background-color: transparent;
        transition: background-color 0.2s ease;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
    }

    .sidebar .list-group-item a {
        color: #000;
        display: flex;
        align-items: center;
    }

    .sidebar .list-group-item:hover,
    .sidebar .list-group-item:active {
        background-color: #f0f0f0;
    }

    .sidebar .list-group-item:hover a {
        color: #000;
        text-decoration: none;
    }

    .sidebar .list-group-item i {
        font-size: 1rem;
        margin-right: 0.5rem;
    }
</style>

<div class="sidebar shadow-sm">
    <h5>Danh mục</h5>
    <ul class="list-group">
        @if (Model != null)
        {
            foreach (var category in Model)
            {
                <li class="list-group-item">
                    <a href="@Url.Action("Category", new { category = category })" class="text-decoration-none">
                        <i class="fas fa-tag me-2"></i> @ToVietnamese(category)
                    </a>
                </li>
            }
        }
    </ul>
</div>
