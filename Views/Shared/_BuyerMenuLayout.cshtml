<style>
    .buyer-menu-container {
        width: 100%;
        max-width: 300px;
        background-color: #1c1c1c;
        color: #e8f5e9;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        font-family: 'Segoe UI', sans-serif;
    }

    .buyer-profile {
        display: flex;
        align-items: center;
        padding: 1rem;
        background-color: #111;
        border-bottom: 1px solid #2e2e2e;
    }

    .buyer-avatar img {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #2ecc71;
        margin-right: 1rem;
    }

    .buyer-info .title {
        font-size: 0.85rem;
        color: #aaa;
    }

    .buyer-info .name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2ecc71;
    }

    .buyer-menu-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .buyer-menu-link {
        display: block;
        padding: 0.9rem 1.2rem;
        text-decoration: none;
        color: #e8f5e9;
        font-size: 1rem;
        transition: background 0.3s, color 0.3s;
        border-bottom: 1px solid #2a2a2a;
    }

    .buyer-menu-link:hover {
        background-color: #2ecc71;
        color: #000;
    }

    .buyer-menu-link.active {
        background-color: #27ae60;
        color: #fff;
        font-weight: 600;
    }
</style>

<div class="buyer-menu-container">
    <div class="buyer-profile">
        <div class="buyer-avatar">
            <img src="~/images/default-avatar-buyer.jpg" alt="Avatar" />
        </div>
        <div class="buyer-info">
            <div class="title">Tài khoản của</div>
            <div class="name">Lê Văn Đạt</div>
        </div>
    </div>
    <ul class="buyer-menu-list">
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "ThongTinTaiKhoan" ? "active" : "")"
            href="@Url.Action("ThongTinTaiKhoan", "Buyer")">
            Thông tin tài khoản
            </a>
        </li>
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "DoiMatKhau" ? "active" : "")"
            href="@Url.Action("DoiMatKhau", "Buyer")">
            Đổi mật khẩu
            </a>
        </li>
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "OrderDetailHome" ? "active" : "")"
            href="@Url.Action("OrderDetailHome", "Order")">
                Quản lý đơn hàng
            </a>
        </li>
        </li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "ReturnExchangeHome" ? "active" : "")"
            href="@Url.Action("ReturnExchangeHome", "Buyer")">
                Quản lý đổi trả
            </a>
        </li>
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "AddressHome" ? "active" : "")"
            href="@Url.Action("AddressHome", "Buyer")">
                Sổ địa chỉ
            </a>
        </li>
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "WalletHome" ? "active" : "")"
            href="@Url.Action("WalletHome", "Buyer")">
                Ví
            </a>
        </li>
        </li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "VoucherHome" ? "active" : "")"
            href="@Url.Action("VoucherHome", "Buyer")">
                Kho voucher
            </a>
        </li>
        <li>
            <a class="buyer-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "ReviewHome" ? "active" : "")"
            href="@Url.Action("ReviewHome", "Buyer")">
                Đánh giá của tôi
            </a>
        </li>
    </ul>
</div>
