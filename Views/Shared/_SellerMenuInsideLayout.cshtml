@{
    var avatarBytes = Context.Session.Get("Avatar");
    var avatarBase64 = avatarBytes != null ? $"data:image/png;base64,{Convert.ToBase64String(avatarBytes)}" : Url.Content("~/images/avatar-default.png");
    var storeName = Context.Session.GetString("StoreName") ?? "Không tên";
}

<!-- Link Font Awesome (chèn vào <head> nếu chưa có) , được tải từ internet , giúp giảm tải cho server-->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    .seller-menu-container {
        width: 100%;
        max-width: 280px;
        background: linear-gradient(145deg, #1e1e2f, #111122);
        color: #f1f1f1;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        font-family: 'Segoe UI', sans-serif;
    }

    .seller-profile {
        display: flex;
        align-items: center;
        padding: 1.2rem;
        background-color: #191933;
        border-bottom: 1px solid #333;
    }

    .seller-avatar img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #2ecc71;
        margin-right: 1rem;
    }

    .seller-info .title {
        font-size: 0.8rem;
        color: #bbb;
    }

    .seller-info .name {
        font-size: 1.05rem;
        font-weight: 600;
        color: #2ecc71;
    }

    .seller-menu-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .seller-menu-list li {
        border-bottom: 1px solid #2a2a2a;
    }

    .seller-menu-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 1rem 1.4rem;
        text-decoration: none;
        color: #f1f1f1;
        font-size: 1rem;
        transition: background 0.3s ease, transform 0.2s;
    }

    .seller-menu-link:hover {
        background-color: #2ecc71;
        color: #000;
        transform: translateX(4px);
    }

    .seller-menu-link i {
        width: 20px;
        text-align: center;
    }

    .seller-menu-link.active {
        background-color: #27ae60;
        color: #fff;
        font-weight: bold;
    }

    media (max-width: 768px) {
        .seller-menu-container {
            max-width: 100%;
        }
    }
</style>

<div class="seller-menu-container">
    <div class="seller-profile">
        <div class="seller-avatar">
            <img src="@avatarBase64" alt="Seller Avatar">
        </div>
        <div class="seller-info">
            <div class="title">Tên shop</div>
            <div class="name">@storeName</div>
        </div>
    </div>

    <ul class="seller-menu-list">
        <li>
            <a class="seller-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "Profile" ? "active" : "")" 
               href="@Url.Action("Profile", "Seller")">
                <i class="fas fa-user"></i> Thông tin cá nhân
            </a>
        </li>
        <li>
            <a class="seller-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "DoiMatKhau" ? "active" : "")" 
               href="@Url.Action("DoiMatKhau", "Seller")">
                <i class="fas fa-lock"></i> Đổi mật khẩu
            </a>
        </li>
        <li>
            <a class="seller-menu-link @(ViewContext.RouteData.Values["action"].ToString() == "Wallet" ? "active" : "")" 
               href="@Url.Action("Wallet", "Seller")">
                <i class="fas fa-wallet"></i> Ví
            </a>
        </li>
    </ul>
</div>