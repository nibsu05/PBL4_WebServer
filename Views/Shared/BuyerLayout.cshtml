@{
    var searchTerm = ViewBag.SearchTerm as string;
    var username = ViewBag.Username;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CDT Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { background: #f8f9fa; font-family: 'Segoe UI', sans-serif; }
        .main-header {
            background: #222; color: #fff; @*border-radius: 0 0 16px 16px;*@ padding: 0.5rem 0;
            z-index: 2;
        }
        .main-header .search-bar { border-radius: 2rem; border: none; width: 350px; }
        .main-header .btn-search { background: #219150; color: #fff; border-radius: 2rem; border: none; }
        .main-header .btn-search:hover { background: #27ae60; }
        .main-header .btn-header { background: #0d3f2e; color: #fff; border-radius: 2rem; border: none; margin-left: 0.5rem; }
        .main-header .btn-header:hover { background: #27ae60; color: #fff; }
        .main-header .logo { font-size: 2rem; font-weight: bold; color: #dfffe1; letter-spacing: 1px; }
        .main-header .cart-badge { font-size: 0.8rem; }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <div class="main-header w-100 shadow-sm mb-3">
        <div class="container-fluid d-flex flex-wrap align-items-center justify-content-between py-2">
            <div class="logo d-flex align-items-center">
                <a href="@Url.Action("Index", "Product")" class="text-decoration-none" style="color: inherit;">
                    CDT Store
                </a>
            </div>
            <form asp-action="Search" method="get" class="d-flex flex-grow-1 mx-3" style="max-width: 500px;">
                <input type="text" name="searchTerm" class="form-control search-bar me-2" placeholder="Tìm kiếm sản phẩm..." value="@searchTerm">
                <button type="submit" class="btn btn-search">Tìm kiếm</button>
            </form>
            <div class="d-flex align-items-center">
            <div class="dropdown me-2">
                <button class="btn btn-header dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Tài khoản
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("ThongTinTaiKhoan", "Buyer")">Thông tin tài khoản</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("WalletHome", "Buyer")">Ví</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                </ul>
            </div>
                <a href="@Url.Action("Cart", "Cart")" class="btn btn-header position-relative me-2">
                    <i class="fas fa-shopping-cart"></i>
                    @if (ViewBag.CartCount > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge">
                            @ViewBag.CartCount
                        </span>
                    }
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 