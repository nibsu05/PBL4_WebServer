    }

    .voucher-card h3 {
        margin-top: 0;
        margin-bottom: 8px;
        font-size: 1.2em;
        color: #2c3e50;
    }

    .voucher-card p {
        margin: 4px 0;
    }

    .voucher-meta {
        font-size: 0.9em;
        color: #555;
    }

    .voucher-card .btn {
