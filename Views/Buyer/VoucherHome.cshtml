        border-radius: 6px;
        cursor: pointer;
        font-size: 0.95em;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

    .voucher-card .btn:hover {
        background: #219150;
    }

    .no-voucher {
        text-align: center;
        color: #888;
        font-style: italic;
        padding: 30px 0;
    }
