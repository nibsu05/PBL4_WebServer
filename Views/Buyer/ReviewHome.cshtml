@model List<PBL3.DTO.Buyer.Buyer_DanhGiaDTO>
@using System.Globalization

@{
    ViewData["Title"] = "Đánh giá của bạn";
    Layout = "~/Views/Shared/BuyerLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>@ViewData["Title"]</title>
    <style>
        /* Giữ nguyên phần modal popup */
        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            padding-top: 60px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fff;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            border-radius: 8px;
            width: 90%;
            max-width: 600px;
            position: relative;
        }

        .close-btn {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close-btn:hover,
        .close-btn:focus {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="flex gap-6 max-w-5xl mx-auto mt-10">
        <!-- Menu bên trái -->
        <div class="w-1/4">
            @Html.Partial("~/Views/Shared/_BuyerMenuLayout.cshtml")
        </div>

        <!-- Nội dung chính -->
        <div class="w-3/4 bg-white p-6 sm:p-8 rounded-lg shadow-xl">
            <div class="bg-green-700 text-white text-center py-4 rounded-md">
                <h1 class="text-xl font-semibold">Đánh giá của bạn</h1>
            </div>

            <div class="mt-6 space-y-6">
                @if (Model != null && Model.Any())
                {
                    @foreach (var review in Model)
                    {
                        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4 flex gap-4 relative">
                            <div class="w-[100px] h-[120px] flex-shrink-0">
                                @if (review.ProductImage != null && review.ProductImage.Length > 0)
                                {
                                    var base64 = Convert.ToBase64String(review.ProductImage);
                                    var imgSrc = $"data:image/png;base64,{base64}";
                                    <img src="@imgSrc" alt="@review.ProductName" class="w-full h-full object-cover rounded border border-gray-200" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-sm bg-gray-200 text-gray-600 rounded text-center">
                                        Ảnh sản phẩm
                                    </div>
                                }
                            </div>

                            <div class="flex flex-col flex-grow">
                                <h3 class="text-lg font-medium mb-1">@review.ProductName</h3>

                                <div class="flex items-center mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <span class="text-yellow-400 text-lg">&#9733;</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-300 text-lg">&#9733;</span>
                                        }
                                    }
                                </div>

                                <p class="text-sm text-gray-700 mb-2">@review.Content</p>

                                <p class="text-xs text-gray-500">
                                    Bởi: @review.BuyerName - Ngày: @review.DateReview.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)
                                </p>

                                <button class="mt-3 w-fit bg-green-700 hover:bg-green-800 text-white text-sm px-4 py-2 rounded shadow"
                                        onclick="openEditReview(@review.ReviewId)">
                                    Sửa đánh giá
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-gray-600 py-10">Chưa có đánh giá nào để hiển thị.</p>
                }
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="editReviewModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal()">&times;</span>
            <div id="modal-body"></div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/review-edit.js"></script>
    <script>
        function openEditReview(reviewId) {
            $.get('@Url.Action("EditComment")', { reviewId: reviewId }, function (data) {
                $('#modal-body').html(data);
                $('#editReviewModal').fadeIn();
                initEditReviewModal();
            });
        }

        function closeModal() {
            $('#editReviewModal').fadeOut();
            $('#modal-body').html('');
        }
    </script>
</body>
</html>

