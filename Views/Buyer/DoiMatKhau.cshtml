@model PBL3.DTO.Buyer.Buyer_DoiMatKhauDTO
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/BuyerLayout.cshtml";
}

@section Styles {
    <style>
        .profile-container {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 2px 8px #0001;
            padding: 32px 24px;
            margin-bottom: 24px;
        }

        .profile-title {
            color: #27ae60;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 24px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #333;
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 12px;
            width: 100%;
            transition: border-color 0.2s;
        }

        .form-control:focus {
            border-color: #27ae60;
            outline: none;
            box-shadow: 0 0 0 2px rgba(39, 174, 96, 0.2);
        }

        .btn-change-password {
            background: #27ae60;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: background 0.2s;
            margin-top: 10px;
        }

        .btn-change-password:hover {
            background: #219150;
        }

        .validation-error {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 4px;
        }

        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
}

<div class="row">
    <!-- Sidebar menu -->
    <div class="col-lg-2 col-md-3 mb-3">
        @Html.Partial("~/Views/Shared/_BuyerMenuLayout.cshtml")
    </div>

    <!-- Main content -->
    <div class="col-lg-10 col-md-9">
        <div class="profile-container">
            <div class="profile-title">Đổi mật khẩu</div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="DoiMatKhau" method="post">
                <div class="form-group">
                    <label asp-for="OldPassword" class="form-label">Mật khẩu cũ</label>
                    <input asp-for="OldPassword" type="password" class="form-control" />
                    <span asp-validation-for="OldPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="validation-error"></div>

                <button type="submit" class="btn-change-password">Xác nhận đổi mật khẩu</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
