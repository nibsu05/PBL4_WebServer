@model PBL3.DTO.Buyer.ExchangeStuffDTO

@{
    ViewBag.Title = "Yêu cầu đổi/trả hàng";
    Layout = "~/Views/Shared/BuyerLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }

        .form-label {
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .form-input, .form-textarea {
            width: 100%;
            padding: 0.5rem 0.75rem;
            background-color: white;
            border: 1px solid #D1D5DB;
            border-radius: 0.375rem;
            font-size: 0.875rem;
        }

        .form-input:focus, .form-textarea:focus {
            outline: none;
            border-color: #219150;
            box-shadow: 0 0 0 1px #219150;
        }

        .btn-primary {
            background-color: #219150;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #1b7d46;
        }
    </style>
</head>
<body>
    <div class="flex gap-6 max-w-5xl mx-auto mt-10">
        <div class="w-1/4">
            @Html.Partial("~/Views/Shared/_BuyerMenuLayout.cshtml")
        </div>

        <div class="w-3/4 bg-white p-6 sm:p-8 rounded-lg shadow-xl">
            <h1 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-6">Tạo yêu cầu đổi / trả</h1>

            <!-- Form: gửi về AddReturnExchange -->
            <form asp-action="AddReturnExchange" asp-controller="Buyer" enctype="multipart/form-data" method="post">
                @Html.HiddenFor(m => m.ProductId)
                @Html.HiddenFor(m => m.OrderId)

                <div class="flex items-start gap-6 mb-6">
                    <div class="w-32 h-32 border rounded overflow-hidden flex-shrink-0">
                        @{
                            string base64Image = Model.ProductImage != null && Model.ProductImage.Length > 0
                                ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.ProductImage)}"
                                : "https://placehold.co/128x128?text=No+Image";
                        }
                        <img src="@base64Image" alt="Product Image" class="w-full h-full object-cover" />
                    </div>

                    <div class="flex flex-col justify-center space-y-2">
                        <div>
                            <span class="block text-lg font-bold text-gray-800">@Model.ProductName</span>
                        </div>
                        <div>
                            <span class="text-sm text-gray-600">Mã đơn hàng:</span>
                            <span class="text-sm font-medium text-gray-800">@Model.OrderId</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label asp-for="Quantity" class="form-label">Số lượng cần đổi / trả</label>
                    <input asp-for="Quantity" type="number" min="1" class="form-input" required />
                    <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Reason" class="form-label">Lý do đổi / trả</label>
                    <textarea asp-for="Reason" class="form-textarea" rows="4" required></textarea>
                    <span asp-validation-for="Reason" class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ImageFile" class="form-label">Ảnh minh chứng (nếu có)</label>
                    <input asp-for="ImageFile" type="file" accept="image/*" class="form-input" />
                    <span asp-validation-for="ImageFile" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-6 text-center">
                    <button type="submit" class="btn-primary">Gửi yêu cầu</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
